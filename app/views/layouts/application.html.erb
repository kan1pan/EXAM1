<!DOCTYPE html>
<html>
<head>
  <title>なんちゃってTwitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section class="frame-header">
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fuild">
          <div class="navbar-header">
            <%= link_to "Home", root_path, class: "navbar-brand" %>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav_target">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="nav_target">
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "つぶやき一覧", tweets_path %></li>
                  <li><%= link_to "つぶやく", new_tweet_path %></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  </section>

<%= yield %>

  <section class="frame-footer">
    <footer>
        <p>なんちゃってTwitter</p>
    </footer>
  </section>

</body>
</html>
